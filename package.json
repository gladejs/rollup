{
    "name": "@gladejs/rollup",
    "version": "0.4.1",
    "description": "The GladeJS Module adding support for Rollup, move along ...",
    "keywords": [
        "gladejs",
        "marko",
        "rollup-plugin",
        "browser-sync",
        "html-minifier"
    ],
    "homepage": "https://gladejs.com",
    "repository": "github:gladejs/rollup",
    "bugs": "https://github.com/gladejs/rollup/issues",
    "author": {
        "name": "Aurélien Stébé",
        "email": "aurelien.stebe@gmail.com"
    },
    "type": "commonjs",
    "main": "./dist/gladejs-rollup.js",
    "exports": {
        ".": "./dist/gladejs-rollup.js",
        "./browser-sync": "./dist/browser-sync.js",
        "./html-minifier": "./dist/html-minifier.js"
    },
    "license": "MIT",
    "scripts": {
        "lint": "prettier -c . && eslint *.js dist tags"
    },
    "engines": {
        "npm": ">=6.9.0",
        "node": ">=10.16"
    },
    "os": [
        "darwin",
        "linux",
        "win32"
    ],
    "prettier": {
        "semi": false,
        "tabWidth": 4,
        "singleQuote": true,
        "trailingComma": "es5"
    },
    "eslintConfig": {
        "extends": [
            "eslint:recommended",
            "plugin:node/recommended",
            "plugin:import/recommended",
            "plugin:promise/recommended",
            "standard",
            "prettier",
            "prettier/standard"
        ]
    },
    "release": {
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            "@semantic-release/changelog",
            "@semantic-release/npm",
            "@semantic-release/git",
            "@semantic-release/github"
        ]
    },
    "dependencies": {
        "browser-sync": "^2.26.12",
        "glob": "^7.1.6",
        "html-minifier": "^4.0.0",
        "normalize-path": "^3.0.0",
        "relateurl": "^0.2.7"
    },
    "devDependencies": {
        "@semantic-release/changelog": "^5.0.1",
        "@semantic-release/git": "^9.0.0",
        "eslint": "^7.11.0",
        "eslint-config-prettier": "^6.12.0",
        "eslint-config-standard": "^14.1.1",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-standard": "^4.0.1",
        "marko": "^4.23.9",
        "prettier": "^2.1.2",
        "semantic-release": "^17.2.1"
    },
    "peerDependencies": {
        "marko": "^4 || ^5.0.0-next || ^5",
        "rollup": "^1.20 || ^2"
    },
    "publishConfig": {
        "access": "public"
    }
}
