{
    "name": "@gladejs/rollup",
    "version": "0.3.1",
    "description": "The GladeJS Module adding support for Rollup, move along ...",
    "keywords": [
        "marko",
        "rollup",
        "browser-sync",
        "html-minifier"
    ],
    "homepage": "https://gladejs.com",
    "repository": "github:gladejs/rollup",
    "bugs": "https://github.com/gladejs/rollup/issues",
    "author": {
        "name": "Aurélien Stébé",
        "email": "aurelien.stebe@gmail.com"
    },
    "type": "commonjs",
    "main": "./dist/gladejs-rollup.js",
    "exports": {
        ".": "./dist/gladejs-rollup.js",
        "./browser-sync": "./dist/browser-sync.js",
        "./html-minifier": "./dist/html-minifier.js"
    },
    "license": "MIT",
    "engines": {
        "npm": ">=6.9.0",
        "node": ">=10.16"
    },
    "os": [
        "darwin",
        "linux",
        "win32"
    ],
    "release": {
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            "@semantic-release/changelog",
            "@semantic-release/npm",
            "@semantic-release/git",
            "@semantic-release/github"
        ]
    },
    "dependencies": {
        "browser-sync": "^2.26.7",
        "glob": "^7.1.6",
        "html-minifier": "^4.0.0",
        "normalize-path": "^3.0.0",
        "relateurl": "^0.2.7"
    },
    "devDependencies": {
        "@semantic-release/changelog": "^5.0.1",
        "@semantic-release/git": "^9.0.0",
        "marko": "^4.21.10",
        "semantic-release": "^17.0.7",
        "standard": "^14.3.4"
    },
    "peerDependencies": {
        "marko": "^4.20 || ^5",
        "rollup": "^1.20 || ^2"
    },
    "publishConfig": {
        "access": "public"
    }
}
